<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:entities="clr-namespace:TehnoStom2.Entities"
             x:Class="TehnoStom2.OrderDetailPage"
             Shell.NavBarIsVisible="False">
    <ScrollView Padding="20">
        <StackLayout Spacing="15">
            <Label x:Name="TitleLabel" FontSize="20" FontAttributes="Bold"/>
            <Label x:Name="StatusLabel"/>
            <Label x:Name="ScoreLabel"/>
            <Label x:Name="RequirementsLabel"/>
            <Label x:Name="SpecializationLabel"/>

            <Button
                x:Name="ConfirmOrderButton"
                Text="Подствердит выполнение"
                Clicked="ConfirmOrder"
                IsVisible="True"/>
            <Button
                x:Name="NotConfirmOrderButton"
                Text="Отправить на доработку"
                Clicked="NotConfirmOrder"
                IsVisible="True"/>
            <Button
                x:Name="GoBackButton"
                Text="Назад"
                Clicked="GoBack"/>
        </StackLayout>
    </ScrollView>
</ContentPage>